<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Goal</th>
      <th>Activity</th>
      <th>Competence</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.goal.user.email %></td>
        <td><%= activity.goal.name %></td>
        <td><%= activity.name %></td>
        <td><%= activity.goal.competence.name %></td>
        <td><%= activity.start_date %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>
